<div class="row">
    <form action="/login" method="post">
        <div class="row">
            <div class="input-field col s12">
                <input type="email" name="user" class="validate">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input type="password" name="password" class="validate" pattern="^(?=(.*[A-Z]){2})(?=(.*[a-z]){2})(?=(.*[0-9]){2})(?=(.*[!#$%^&*()+_]){2}).{8,}$" required aria-required="true">
                <label for="password">Password</label>
            </div>
        </div>
        <input type="submit" id="login-btn" class="btn waves-effect waves-light" value="Login">
    </form>
</div>
