<h2>Wellcome to your profile {{user.first_name}}</h2>

<div class="col">
    <form class="col s12 m4" action="/profile" method="post">
        <div class="row">
            <div class="input-field col s12 m4">
                <textarea id="biography" name="bio" class="materialize-textarea" data-length="1000">{{user.biography}}</textarea>
                <label for="biography" class='active'>Biography</label>
            </div>
        </div>
        <input type="submit" id="login-btn" class="btn waves-effect waves-light" value="Save Biography">
        <p>NOTE: Refresh the page after form submission.TODO: ajax</p>
    </form>
</div>
{{#if message}}
<div class="red lighten-4">{{message}}</div>
{{/if}}
<script>
    $(document).ready(function() {
        $('input#input_text, textarea#biography').characterCounter();
    });
</script>
