<h2>Wellcome to your profile {{user.first_name}}</h2>

{{#if user.id}}
<div class="row">
    <strong>Account information:</strong>
    <div class="blue cyan lighten-5">User Id: {{user.id}}</div>
    <div class="blue cyan lighten-5">First name: {{user.first_name}}</div>
    <div class="blue cyan lighten-5">Last name: {{user.last_name}}</div>
    <div class="blue cyan lighten-5">email: {{user.email}}</div>
    <div class="blue cyan lighten-5">password: {{user.password}}</div>
</div>
{{/if}}

<div class="col">
    <form class="col s12 m4" action="/profile" method="post">
        <div class="row">
            <div class="input-field col s12 m4">
                <textarea id="biography" name="bio" class="materialize-textarea" data-length="1000">{{user.biography}}</textarea>
                <label for="biography" class='active'>Biography</label>
            </div>
        </div>
        <input type="submit" id="login-btn" class="btn waves-effect waves-light" value="Save Biography">
    </form>
</div>
{{#if message}}
<div class="red lighten-4">{{message}}</div>
{{/if}}
<script>
    $(document).ready(function() {
        $('input#input_text, textarea#biography').characterCounter();

        $("#login.btn").click(function() {
            setTimeout(function() {
                window.location.reload();
            }, 1000);
        });
    });

</script>
